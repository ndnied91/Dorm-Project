


<style media="screen">


*{
	margin: 0;
	padding: 0;
	box-sizing: border-box;
}


html{
	font: normal 25px sans-serif;
	color: #555;
}

ul{
	list-style: none;
}


nav{
	list-style: none;
		padding-bottom: 30px;
}

a{
	text-decoration: none;
	opacity: 0.75;
	color: white;
}

a:hover{
	transition-duration: 0.5s;
	opacity: 1;

}


a.btn{
	border-radius: 4px;
	text-transform: uppercase;
	font-weight: bold;
	text-align: center;
	background-color: #002E51;
	opacity: 1;
}

section{
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 100px 80px;
	/* font-style: italic; */
}



section:not(.hero):nth-child(even){
	background-color: #f5f5f5;
}

.grid{
	width: 100%;
	display: flex;
	flex-wrap: wrap;
	justify-content: center;
}

hr{
	width: 500px;
	height: 3px
	background-color: #3f51b5;
	border: 1px solid black;
	margin-bottom: 50px;
}


/*Header Styles*/

header{
background-color: #002E51;
z-index: 0;
position: absolute;
width: 100%;
/*the absolute position will sit on top of the picture*/
display: flex;
justify-content: space-between;
align-items: center;
padding: 35px 100px 0;
animation: 1s fadeIn 0.5s forwards;
opacity: 0;
color: white;
}


@keyframes fadeIn{ 100%{ opacity: 1; } }

header h2{
padding-bottom: 30px;
	font-family: "Quicksand", sans-serif;
	color: red;
}

header nav{
	display: flex;
	margin-right: -15px;
}

header nav li{

	margin:  0 15px;
}

@media (max-width: 800px){
	header{
		padding: 20px 50px;
		flex-direction: column;
	}

	header h2{
		margin-bottom: 15px;
	}
}



@keyframes slideFade{
	100%{
		opacity: 1;
		margin: 0;
	}
}


@media (max-width: 800px){
	.hero{
		min-height: 600px;
	}
	.hero h1{
		font-size: 48px;
	}

	.hero h3{
		font-size: 24px;
	}

	.hero a.btn{
		padding: 15px 40px;
	}
}



.contact form{
	display: flex;
	align-items: center;
	justify-content: center;
	flex-wrap: wrap;
	width: 60%;
}


.contact form .btn{
	padding: 18px 42px;
}


.contact form input{
	padding: 15px;
	margin-right: 30px;
	font-size: 18px;
	color: #555;
	flex: 1;
}

@media (max-width: 1000px){
	.contact form input{
		flex-basis: 100%;
		margin: 0 0 20px 0;
	}
}




/*Footer Section*/

footer{
	display: flex;
	align-items: center;
	justify-content: space-around;
	background-color: #002E51;
	color: #fff;
	padding: 20px 0;
}



footer ul{
	display: flex;

}


footer ul li{
	margin-left: 16px;
}

footer p{
	text-transform: uppercase;
	font-size: 14px;
	opacity: 0.6;
	align-self: center
}



@media (max-width: 1100px){
	footer{
		flex-direction: column;
	}
	footer p{
		text-align: center;
		margin-bottom: 20px;
	}

	footer ul li{
		margin: 0 8px;
	}
}


